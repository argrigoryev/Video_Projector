<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectTheme"
    android:background="#000000">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select theme"
        android:textColor="@color/white"

        android:textSize="20sp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/theme_1"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginRight="10dp"
                android:onClick="onThemeSelect"
                app:srcCompat="@drawable/theme_1" />


            <ImageView
                android:id="@+id/theme_2"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:onClick="onThemeSelect"
                app:srcCompat="@drawable/theme_2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/theme_3"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:onClick="onThemeSelect"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/theme_3" />


            <ImageView
                android:id="@+id/theme_4"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:onClick="onThemeSelect"
                app:srcCompat="@drawable/theme_4" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/theme_5"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:onClick="onThemeSelect"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/theme_5" />


            <ImageView
                android:id="@+id/theme_6"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:onClick="onThemeSelect"
                app:srcCompat="@drawable/theme_6" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/theme_7"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:onClick="onThemeSelect"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/theme_7" />


            <ImageView
                android:id="@+id/theme_8"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:onClick="onThemeSelect"
                app:srcCompat="@drawable/theme_8" />

        </LinearLayout>

        <ImageView
            android:id="@+id/theme_9"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_gravity="left"
            android:onClick="onThemeSelect"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/theme_9" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>