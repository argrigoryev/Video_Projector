<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectTheme"
    android:background="#000000">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select theme"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/theme_1"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:onClick="onThemeSelect"
                    app:srcCompat="@drawable/theme_1"
                    android:scaleType="fitXY" />


                <ImageView
                    android:id="@+id/theme_2"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="onThemeSelect"
                    app:srcCompat="@drawable/theme_2"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/theme_3"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:onClick="onThemeSelect"
                    app:srcCompat="@drawable/theme_3"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/theme_4"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="onThemeSelect"
                    app:srcCompat="@drawable/theme_4"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/theme_5"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:onClick="onThemeSelect"
                    app:srcCompat="@drawable/theme_5"
                    android:scaleType="fitXY" />


                <ImageView
                    android:id="@+id/theme_6"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="onThemeSelect"
                    app:srcCompat="@drawable/theme_6"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/theme_7"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:onClick="onThemeSelect"
                    app:srcCompat="@drawable/theme_7"
                    android:scaleType="fitXY" />


                <ImageView
                    android:id="@+id/theme_8"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="onThemeSelect"
                    app:srcCompat="@drawable/theme_8"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <ImageView
                android:id="@+id/theme_9"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_gravity="left"
                android:layout_marginLeft="35dp"
                android:onClick="onThemeSelect"
                app:srcCompat="@drawable/theme_9"
                android:scaleType="fitXY"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>